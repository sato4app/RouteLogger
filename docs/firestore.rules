rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users (including anonymous) to read/write projects
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
      
      // Allow access to subcollections like photos
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }

    // Allow authenticated users to read/write tracks
    match /tracks/{trackId} {
      allow read, write: if request.auth != null;
      
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Allow authenticated users to read OfficialPoints
    match /OfficialPoints/{pointId} {
      allow read: if request.auth != null;
    }
  }
}
